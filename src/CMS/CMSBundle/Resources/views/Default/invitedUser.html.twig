        <div class="tableFooter">
            <div class="row">
                <div class="cell">
                    {{ form_widget(form.submit, { 'attr': { 'class': 'submit' } } ) }}
                    {{ form_widget(form.clear, { 'attr': { 'class': 'submit', 'id': 'signup-buttons' } } ) }}
                </div>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}

{% block rightblocks %}
    {{ render(controller('UsersBundle:UsersBlock:login')) }}
