{% extends "::base.html.twig" %}

{% block infobar %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ render(controller('UsersBundle:Infos:infobar')) }}
    {% endif %}
{% endblock %}

{% block breadcrumbs %}
    {{ render(controller('UsersBundle:Infos:breadcrumbs', {'page': { 'name': 'membercp', 'address': 'users_membercp'}, 'section': {'name': 'Signature', 'address': 'users_membercp_signature'} })) }}
{% endblock %}

{% block content %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        {% if flashmessage is defined %}
            <div class="done" id="show_done">
                <b>Your account is modified</b><br />
                {{ flashmessage }}
            </div>
            <br />
        {% endif %}

        <form id="membercp_form" action="">
            <input type="hidden" name="action" value="signature" id="action" />

            <div class="tableHeader">
                <div class="row">
                    <div class="cell first">Member CP - SIGNATURE</div>
                </div>
            </div>

            <div class="table">

                <div class="row">
                    <div class="cell footer">
                        <textarea name="signature" id="tinymce_autoload" class="tinymce">signature</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="cell footer">MAX_CHARS 150 HTML_NOT_ALLOWED</div>
                </div>

                <div class="row">
                    <div class="cell footer">
                        <input type="submit" value="Save" class="submit" />
                        <input type="reset" value="Clear" class="submit" />
                    </div>
                </div>

            </div>

        </form>
    {% endif %}
{% endblock %}

{% block rightblocks %}
    {{ render(controller('UsersBundle:UsersBlock:membercpmenu', {'url': 'membercpsignature'})) }}
{% endblock %}